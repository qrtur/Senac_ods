<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2224"
    tools:context=".ods4">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="223dp"
        android:layout_height="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/ods4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="344dp"
        android:layout_height="253dp"
        android:text="O ODS 4 visa assegurar uma educação de qualidade para todos, promovendo a inclusão e a equidade. Envolve garantir que todas as crianças completem a educação primária e secundária, aumentar o acesso à educação técnica e superior, e promover oportunidades de aprendizado ao longo da vida, preparando todos para um futuro melhor. "
        android:textColor="#FDFBFB"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />
</androidx.constraintlayout.widget.ConstraintLayout>
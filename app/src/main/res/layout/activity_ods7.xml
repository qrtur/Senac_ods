<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".ODS9">


    <ImageView
        android:id="@+id/ods7_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/ods7_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Objetivo de Desenvolvimento Sustentável 9"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/ods7_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="O ODS 9 é crucial para a criação de um futuro mais sustentável, equilibrado e próspero, oferecendo uma base para o crescimento econômico de forma que também se respeite o planeta e se melhore a qualidade de vida das pessoas."
        android:textSize="16sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="378dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="230dp"
        android:layout_alignEnd="@+id/ods7_description"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ods_9"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="42dp" />

</androidx.constraintlayout.widget.ConstraintLayout>